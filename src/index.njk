<ul>
{%- for featured in collections.featured-%}
<li>
    <article class="snippet">
        <img src="{{featured.data.image}}" alt="{{featured.data.image_text}}" class="snippet__image horizontal"/>
            <h3 class="snippet__title"><a href="{{featured.url}}">{{featured.data.title}}</a></h3>
            <p class="snippet__body">{{featured.data.description}}</p>
    </article>
</li>
    
{%-endfor-%}
</ul>
{%if featured.length >0%}
<a href="/articles">Alle Artikel</a>
{%else%}
<p>Hier gibt es wohl nichts zu sehen</p>
{%endif%}
